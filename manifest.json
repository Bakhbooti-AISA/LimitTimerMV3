{
  "manifest_version": 3,
  "name": "LimitTimer",
  "version": "1.0.0",
  "description": "Track time on sites and block them after daily limits.",
  "action": { "default_popup": "popup.html", "default_title": "Site Time Guard" },
  "icons": {
  },
  "permissions": ["storage", "tabs", "idle", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.js"],  
    "type": "module"                
    },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": { "id": "site-time-guard@example.com", "strict_min_version": "115.0" }
  }
}
